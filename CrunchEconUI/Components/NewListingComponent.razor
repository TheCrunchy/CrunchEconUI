
<CascadingValue Value="@User">
    <RadzenStack Orientation="Radzen.Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Start" Gap="2rem" Class="rz-p-2">

        <RadzenStack Orientation="Radzen.Orientation.Vertical" Style="width: 70%;">

            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Item Search</RadzenText>
            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString())) />

            <RadzenDropDown @bind-Value="ListedItem.ItemId" AllowClear="true" Placeholder="Select an ItemId" Data="@definitionIds" Style="width: 100%;"></RadzenDropDown>
            <RadzenStack Orientation="Radzen.Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Start" Gap="2rem" Class="rz-p-2">
            <HasAccessComponent AccessLevel="5">
                    <RadzenCheckBox @bind-Value=@ListedItem.IsAdminListing Name="Is Admin Sale" />
                    <RadzenLabel Text="Admin Sale" Component="Is Admin Sale" Style="margin-left: 8px; vertical-align: middle;" />
            </HasAccessComponent>
            </RadzenStack>
        </RadzenStack>
        <RadzenStack>
            <RadzenImage Path="@eventService.GetTexture(@ListedItem.ItemId)" Style="width: 200px; height: 200px;" />
        </RadzenStack>
    </RadzenStack>


    <RadzenTabs RenderMode="TabRenderMode.Client">
        <Tabs>
            <RadzenTabsItem Text="Sell To Players">
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Sell Price</RadzenText>
                <NumericPicker @bind-Value="@ListedItem.BuyPricePerItem" Min="1" Max=@Int32.MaxValue> </NumericPicker>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Amount to Sell</RadzenText>
                <NumericPicker @bind-Value="@ListedItem.Amount" Min="0" Max=@Int32.MaxValue> </NumericPicker>

            </RadzenTabsItem>
            <RadzenTabsItem Text="Buy From Players">
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Buy Price</RadzenText>
                <NumericPicker @bind-Value="@ListedItem.SellPricePerItem" Min="1" Max=@Int32.MaxValue> </NumericPicker>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Amount to Buy</RadzenText>
                <NumericPicker @bind-Value="@ListedItem.MaxAmountToBuy" Min="0" Max=@Int32.MaxValue> </NumericPicker>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>


        <RadzenButton ButtonType="Radzen.ButtonType.Submit" Size="ButtonSize.Large" Icon="save" Text="Save" Click="@Submit" />

</CascadingValue>