@using CrunchEconUI.Models;﻿
@using CrunchEconUI.Services
@inject DialogService DialogService
@using Radzen

<div class="row px-2">
    @if (User.UserInfo != null)
    {
        <div class="col-md-3 col-lg-2 p-2">
            <RadzenCard Variant="Variant.Text" Class="rz-my-2 rz-mx-auto">
                <RadzenStack Orientation="@Radzen.Orientation.Horizontal" JustifyContent="@Radzen.JustifyContent.Start" Gap="1rem" Class="rz-p-2">
                    <RadzenImage Path="@User.UserInfo?.AvatarUrl" Style="width: 100px; height: 100px; border-radius: 50%;" />
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.Overline">Steam Name</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1"><b>@User.UserInfo.Name</b></RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </div>
        <div class="col-md-3 col-lg-2 p-2">
            <RadzenCard Variant="Variant.Text" Class="rz-my-2 rz-mx-auto">
                <RadzenStack Orientation="@Radzen.Orientation.Horizontal" JustifyContent="@Radzen.JustifyContent.Start" Gap="1rem" Class="rz-p-2">
                    @*  <RadzenImage Path="@User.AvatarUrl" Style="width: 50px; height: 50px; border-radius: 50%;" />*@
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.Overline">Last Known Balance</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1"><b>@($"{BalanceService.GetBalance(User.UserInfo.SteamId):n0}") SC</b></RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </div>
        <div class="col-md-3 col-lg-2 p-2">
            <RadzenCard Variant="Variant.Text" Class="rz-my-2 rz-mx-auto">
                <RadzenStack Orientation="@Radzen.Orientation.Horizontal" JustifyContent="@Radzen.JustifyContent.Start" Gap="1rem" Class="rz-p-2">
                    @*  <RadzenImage Path="@User.AvatarUrl" Style="width: 50px; height: 50px; border-radius: 50%;" />*@
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.Overline">Steam Id</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1"><b>@User.UserInfo.SteamId</b></RadzenText>
                        <LogoutButton></LogoutButton>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </div>
    }
    else
    {
        <CrunchEconUI.Components.LoginButton></CrunchEconUI.Components.LoginButton>
    }
</div>
