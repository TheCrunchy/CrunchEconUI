
<RadzenStack Orientation="Radzen.Orientation.Vertical" Gap="3px">
    <RadzenStack Orientation="Radzen.Orientation.Horizontal">
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H2">Ship Name</RadzenText>
            <RadzenTextBox @bind-value="@NewListing.ShipName" />
        </RadzenStack>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H2">Prefab File Name</RadzenText>
            <RadzenDropDown TValue="string" @bind-Value=@NewListing.ShipPrefabName Data="@service.GetPrefabs()" Style="width: 100%; max-width: 400px;" />

        </RadzenStack>

        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Price</RadzenText>
            <NumericPicker @bind-Value="@NewListing.Price" Min="1" Max=@Int32.MaxValue> </NumericPicker>
        </RadzenStack>

        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Reputation Required</RadzenText>
            <NumericPicker @bind-Value="@NewListing.ReputationRequirement" Min="-1500" Max=1500> </NumericPicker>
        </RadzenStack>

        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H2">Faction Tags, seperated by ,</RadzenText>
            <RadzenTextBox @bind-value="@NewListing.FactionTag" />
        </RadzenStack>
    </RadzenStack>

    <RadzenStack>
        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H2">Description</RadzenText>
        <RadzenTextArea @bind-value="@NewListing.Description" />
    </RadzenStack>

    <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Image uploads, png, jpg, jpeg</RadzenText>

    <RadzenStack Orientation="Radzen.Orientation.Horizontal">
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H4">Main Icon</RadzenText>
     
                <InputFile OnChange="@LoadFiles" accept=".png,.jpg,.jpeg" />
   
  
        </RadzenStack>

        <RadzenImage Path="@SelectedFilePath" Style="max-width: 300px; max-height: 300px;" />
    </RadzenStack>



    <RadzenStack Orientation="Radzen.Orientation.Horizontal">
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H4">Additional</RadzenText>
           
            <InputFile OnChange="@LoadFilesAdditional" accept=".png,.jpg,.jpeg" multiple/>
          
     
        </RadzenStack>
        @foreach (var item in AdditionalImages)
        {
            <RadzenImage Path="@item" Style="max-width: 200px; max-height: 200px;" />

        }
    </RadzenStack>

    <RadzenButton ButtonType="Radzen.ButtonType.Submit" Size="ButtonSize.Large" Icon="save" Text="Save" Click="@Submit" Style="width: 20%;" />

</RadzenStack>
