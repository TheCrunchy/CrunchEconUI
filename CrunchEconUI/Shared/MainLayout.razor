@using CrunchEconUI.Components
@using CrunchEconUI.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>CrunchEconUI</PageTitle>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (UserService.UserInfo != null)
            {
                <AvatarComponent User="UserService.UserInfo" Width="40" Height="40" Class="border border-2 m-auto" />
                <LogoutButton></LogoutButton>
            }
        </div>

        <article class="content px-4">

            @if (UserService.UserInfo == null)
            {
                <H3>You must login to continue</H3>
                <CrunchEconUI.Components.LoginButton></CrunchEconUI.Components.LoginButton>
            }
            else
            {
                @Body
            }
        </article>
    </main>
</div>


