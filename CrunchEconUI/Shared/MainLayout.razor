@using CrunchEconUI.Components
@using CrunchEconUI.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
<RadzenDialog />
<RadzenNotification />
<PageTitle>CrunchEconUI</PageTitle>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
            @if (UserService.UserInfo != null)
            {
               <div class="container-fluid">
                    <RadzenCard>
                        <AvatarComponent User="UserService.UserInfo"/>

                    </RadzenCard>
                    <ListingsComponent User="UserService.UserInfo"></ListingsComponent>
                    </div>
           
            }
    

        @if (UserService.UserInfo == null)
        {
            <H3>You must login to continue</H3>
            <CrunchEconUI.Components.LoginButton></CrunchEconUI.Components.LoginButton>
        }
        else
        {
            @Body
        }
    </main>
</div>


